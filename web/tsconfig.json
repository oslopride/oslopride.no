{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",

    "outDir": "lib",
    "declaration": true
  }
}
